# =============================================================================
# GitchaCars Backend â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# Variables marked [Required] must be set for the app to start.
# Variables marked [Optional] enable additional features but are not required.
# =============================================================================

# [Required] Neon Postgres connection string
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# [Required] Secret key for signing JWT tokens (use a long random string in production)
JWT_SECRET=change-me-to-a-random-secret

# [Optional] Server port (default: 3001)
PORT=3001

# [Optional] Frontend URL for CORS (default: http://localhost:5173)
FRONTEND_URL=http://localhost:5173

# [Optional] Anthropic API key for AI chat features
ANTHROPIC_API_KEY=

# [Optional] Google OAuth client ID for Google sign-in
GOOGLE_CLIENT_ID=

# [Optional] SendGrid API key for email notifications (welcome emails, introductions)
SENDGRID_API_KEY=

# [Optional] From address for SendGrid emails (default: noreply@gitchacars.com)
SENDGRID_FROM_EMAIL=noreply@gitchacars.com

# [Optional] Firebase service account for image storage
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# [Optional] Imagin Studio API key for car image proxy
IMAGIN_API_KEY=demo
