# =============================================================================
# GitchaCars Frontend — Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# All variables are optional — the app works without them (features degrade gracefully).
# Note: Vite inlines VITE_* variables at BUILD TIME, not runtime.
# =============================================================================

# [Optional] API base URL (default: /api — works with the unified Express server)
VITE_API_URL=/api

# [Optional] Demo gate password. If set, visitors must enter this password before
# accessing the app. Leave empty/unset to disable the gate (recommended for local dev).
VITE_DEMO_PASSWORD=

# [Optional] Google OAuth client ID for Google sign-in
VITE_GOOGLE_CLIENT_ID=

# [Optional] Set to "true" to use mock data instead of the real API
VITE_USE_MOCKS=false

# [Optional] Firebase config for real-time chat and messaging
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_DATABASE_URL=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
